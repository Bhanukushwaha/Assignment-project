


<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="card px-4 py-5 px-md-5 text-center text-lg-start" style="margin-top: 10px; background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-1 mb-5 mb-lg-0">
          </div>
            <div class="col-lg-11 mb-5 mb-lg-0"> 
              <%= form_with(model: role, local: true) do |form| %>
                <% if role.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

                    <ul>
                      <% role.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>            
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputname6">Name :</label>                  
                  <%= form.text_field :name, id: "inputPassword6", class: "form-control mx-sm-3",placeholder: "Enter your Company Name" %> 
                </div>
                  <div>                    
                    <%= form.submit  :class=> "btn btn-outline-secondary mb-2 px-md-5" %>
                  </div>                  
                  <div class="px-md-2">                   
                    <%= link_to 'Role Back', roles_path ,class: "btn btn-outline-success mb-2 px-md-5 "%>

                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>

