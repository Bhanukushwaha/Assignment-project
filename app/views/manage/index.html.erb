<body>
<table id="myTable">
    <tr class="header">
        <th>FistName</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Company</th>  
        <th>Role</th>
        <th>Monthlycharge</th>      
        <th>Startdate</th>
        <th>Enddate</th>
        <th>Notes</th>                
        <th>Active</th>             
      <th colspan="3">Actions</th>
    </tr>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user&.company&.name %></td>
        <td><%= user&.role&.name %></td>
        <td><%= user.monthly_charge %></td>
        <td><%= user.start_date %></td>
        <td><%= user.end_date %></td>        
        <td><%= user.notes %></td>
        <td><%= user.active %></td>        
        <td><%= link_to "Show",  manage_path(user), class: "btn btn-warning btn-sm"%></td>
        <td><%= link_to "Edit",  edit_manage_url(user),class: "btn btn-success btn-sm" %></td>
        <td><%= button_to 'Destroy', manage_path(user), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body><br>

