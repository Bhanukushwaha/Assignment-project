
<p id="notice"><%= notice %></p>

<!-- <h1>Countries</h1> -->

<table id="myTable">
  <thead>
    <tr class="header">
      <th>No</th>
      <th style="width:30%;">Name</th>
      <th style="width:40%;" colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each_with_index do |country, sindex| %>
      <tr>
        <td><%= sindex+1 %></td>
        <td><%= country.name %></td>
        <td><%= link_to 'Show', country,class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= link_to 'Edit', edit_country_path(country),class: "btn btn-outline-success btn-sm" %></td>
        <td><%= button_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Country', new_country_path,class: "btn btn-outline-primary" %>




<style>
* {
  box-sizing: border-box;
}

#myInput {
  background-image: url('/css/searchicon.png');
  background-position: 10px 10px;
  background-repeat: no-repeat;
  width: 70%;
  border-radius: 10px;
  font-size: 16px;
  padding: 12px 20px 8px 40px;
  border: 1px solid #ddd;
  margin-bottom: 14px;
}

#myTable {
  border-collapse: collapse;
  width: 100%;
  border: 1px solid #ddd;
  font-size: 18px;
}

#myTable th, #myTable td {
  text-align: left;
  padding: 7px;
}

#myTable tr {
  border-bottom: 1px solid #ddd;
}

#myTable tr.header, #myTable tr:hover {
  background-color: #f1f1f1;
}
</style>