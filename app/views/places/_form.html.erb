




<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="card px-4 py-5 px-md-5 text-center text-lg-start" style="margin-top: 10px; background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-1 mb-5 mb-lg-0">
          </div>
            <div class="col-lg-11 mb-5 mb-lg-0"> 
              <%= form_with(model: place, local: true) do |form| %>
                <% if place.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

                    <ul>
                      <% place.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
        
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputname6">Name :</label>                  
                  <%= form.text_field :name, placeholder: "Enter your place Name", class: "form-control mx-sm-3" %> 
                </div>
                <div class="form-group">
                  <label for="inputcountry6">company_id :</label> 
                  <%= form.select :company_id, Company.all.map{ |u| [u.name, u.id]},{:prompt => "--select Company--"},class: "form-control mx-sm-3" %>                  
                </div>
                  <div class="">                    
                    <%= form.submit  :class=> "btn btn-outline-secondary mb-2 px-md-5" %>
                  </div>                  
                  <div class="px-md-2">                    
                    <%= link_to 'Back', places_path ,class: "btn btn-outline-success mb-2 "%>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>

